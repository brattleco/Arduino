//shoot for red player
int motorpin1 = 3;  
int EnA = 5;
int motorpin2 = 6;

int motorpin3 = 9;  
int EnB = 10;
int motorpin4 = 11;

int incomingByte = 0;

 boolean flagA = 0;
 boolean flagB = 0;

#include <MPU6050.h>

 MPU6050 sensor ;
 
 int16_t ax, ay, az ;
 int16_t gx, gy, gz ;

void setup()
{
  //----------------- gyro -------------
Serial.begin  (9600); 
Serial.println  ( "Initializing the sensor" ); 
sensor.initialize ( ); 
Serial.println (sensor.testConnection ( ) ? "Successfully Connected" : "Connection failed"); 
delay (1000); 
Serial.println ( "Taking Values from the sensor2" );
delay (1000);
//----------------------------------------

  pinMode(motorpin1,OUTPUT);
  pinMode(EnA,OUTPUT);
  pinMode(motorpin2,OUTPUT);
  
  pinMode(motorpin3, OUTPUT);
  pinMode (EnB,OUTPUT );
  pinMode (motorpin4,OUTPUT);
  
  pinMode(13,OUTPUT);

}


void loop()
{
//------------- gyro -------------
sensor.getMotion6 (&ax, &ay, &az, &gx, &gy, &gz);
ax = map (ax, -17000, 17000, -180, 180) ;
Serial.println (ax);

//-------------------------------------

         if (ax >= 350 && ax<=375){
      in(0,35,35);
    }else{
      in(0,0,0);
    }

     
if (Serial.available() > 0) {

incomingByte = Serial.read();

     
if (incomingByte == 'B') 
  {
    shootB();

}

 if (incomingByte == 'A' ) 
  {
shootA();
 }

}

} 


void in (int motorpin1val , int EnAval , int motorpin2val) {
  analogWrite (motorpin1 , motorpin1val);
   analogWrite (EnA , EnAval);
    analogWrite (motorpin2 , motorpin2val);
  
}


void out (int motorpin3val , int EnBval , int motorpin4val) {
  analogWrite (motorpin3 , motorpin3val);
   analogWrite (EnB , EnBval);
    analogWrite (motorpin4 , motorpin4val);
  
}

void shootA(){ 
   digitalWrite(13,HIGH);
   delay(1000);
   digitalWrite(13,LOW);
   delay(100); 
 out(255,255,0);
    delay(100);
    out(0,0,0);
     delay(1000);
     out(0,255,255);
     delay(400);
     out(0,0,0);
     delay(1000);

      out(0,150,150);

     // out(255,255,0);
  //  delay(100);
  //  out(0,0,0);
    incomingByte = 'd';
   // delay(1000);
}

void shootB(){
  
   digitalWrite(13,HIGH);         //buzzer
   delay(1000);
   
   digitalWrite(13,LOW);
   delay(100);
   
    in(0,180,180);
    delay(100);
    in(0,0,0);
     delay(1000);
     in(255,255,0);
     delay(250);
     in(0,0,0);
     delay(1000);

     

      //  in(0,180,180);
   // delay(75);
   //  in(0,0,0);
    incomingByte = 'd';
  //  delay(1000);
 
}
